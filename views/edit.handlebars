<form action="/todos/{{todo.id}}?_method=PUT" method="POST">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <span class="input-group-text">name</span>
      <div class="input-group-text">
        <input type="checkbox" name="done" {{#if todo.done}}checked{{/if}}>
      </div>
    </div>

    <input class="form-control" type="text" name="name" value="{{todo.name}}">

    <div class="input-group-append">
      <button class="btn btn-info">submit</button>
    </div>
  </div>
</form>
<a class="btn btn-success btn-sm float-right" href="/">cancel</a>